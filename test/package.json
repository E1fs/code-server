{
  "name": "test",
  "version": "1.0.0",
  "description": "code-server tests",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "test": "npx jest --verbose"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/jest-environment-puppeteer": "^4.0.0",
    "@types/puppeteer": "^1.12.3",
    "@types/xml2js": "^0.4.3"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "<rootDir>/../scripts/test-setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/logger/"
    ],
    "testRegex": ".*\\.test\\.tsx?"
  }
}